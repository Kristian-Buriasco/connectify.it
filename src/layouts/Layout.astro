            name="keywords"
            content="local web development, small business, internet, connect, website design, website development"
        />

        <!-- theme meta -->
        <meta name="theme-name" content="dtox" />
        <meta
            name="description"
            content="Connectify is a local web development company that helps small businesses connect with the internet and beyond. Contact us for a consultation."
        />
        <meta
            name="keywords"
            content="local web development, small business, internet, connect, website design, website development"
        />

        <!-- Open Graph data -->
        <meta
            property="og:title"
            content="Connectify || Local Web Developing"
        />
