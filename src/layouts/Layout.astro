---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="IT">
    <head>
        <meta charset="utf-8" />
        <title>Connectify || Local Web Developing</title>
        <meta name="theme-color" content="#8886f7" />
        <!-- mobile responsive meta -->
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, maximum-scale=5"
        />

        <!-- theme meta -->
        <meta
            name="description"
            content="Connectify is a local web development company that helps small businesses 
				connect with the internet and beyond. Contact us for a consultation."
        />
