---
import FooterBg from "../images/backgrounds/footer-bg.webp";
const styles = `background-image: url(${FooterBg})`;

import Logo from "../images/logo.webp";
---

<footer
    class="section fp-auto-height footer-section footer"
    style={styles} >
    <div class="container">
        <div class="row">
            <div class="col-lg-4 text-center text-lg-left mb-4 mb-lg-0">
                <!-- logo -->
                <a href="/">
                    <img class="img-fluid" src={Logo} alt="logo" />
                </a>
            </div>
            <!-- footer menu -->
            <nav class="col-lg-8 align-self-center mb-5">
                <ul class="list-inline text-lg-right text-center footer-menu">
                    <li class="list-inline-item active">
                        <a href="/#home-anchor">Home</a>
                    </li>
                    <li class="list-inline-item">
                        <a class="page-scroll" href="/#feature-anchor">Servizi</a>
                    </li>
                    <li class="list-inline-item">
                        <a class="page-scroll" href="/#about-anchor">Su di noi</a>
                    </li>
                    <li class="list-inline-item">
                        <a class="page-scroll" href="/#team-anchor">Team</a>
                    </li>
                    <li class="list-inline-item">
                        <a href="/contact/#home-anchor">Contatta</a>
                    </li>
                </ul>
            </nav>
            <!-- footer social icon -->
            <nav class="col-12">
                <ul class="list-inline text-lg-right text-center social-icon">
                <li class="list-inline-item">
                    <a
                    class="facebook"
                    href="mailto:info@connectify.it"
                    aria-label="contact us via email">
                        <i class="ti-email"></i>
                    </a>
                </li>
                <li class="list-inline-item">
                    <a
                    class="twitter"
                    href="https://twitter.com/Connectify_IT"
                    aria-label="our twitter account">
                        <i class="ti-twitter-alt"></i>
                    </a>
                </li>
                <li class="list-inline-item">
                    <a
                    class="linkedin"
                    href="https://www.instagram.com/connectify_it/"
                    aria-label="our linkedin account">
                        <i class="ti-instagram"></i>
                    </a>
                </li>
                <li class="list-inline-item">
                    <a
                    class="black"
                    href="https://github.com/Connectify-it"
                    aria-label="our instagram account">
                        <i class="ti-github"></i>
                    </a>
                </li>
                </ul>
            </nav>
        </div>
    </div>
</footer>

<style lang="scss">
    @import "../styles/variables.scss";

    .footer {
        background-size: cover;
        background-position: top center;
        background-repeat: no-repeat;

        &-section{
            padding-top: 500px !important;
            padding-bottom: 100px;
        }

        &-menu {
            a {
                color: $text-color-dark;
                display: block;
                padding: 15px;
                font-weight: 400;
                margin: 0;
            }
        }
    }
</style>