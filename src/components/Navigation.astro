---
import Logo from "../images/logo.webp";
---

<section class="fixed-top navigation">
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <div class="navbar-headers">
                <a class="navbar-brand" href="/">
                    <img
                        src={Logo}
                        alt="logo"
                        width="204px"
                        height="35px"
                    />
                </a>
                <button
                    class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav"
                    aria-controls="navbarNav"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                >
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav nav-bg rounded-20">
                    <li class="nav-item">
                        <a class="nav-link" href="/#home-anchor"
                            >Home</a
                        >
                    </li>
                    <li class="nav-item">
                        <a
                            class="nav-link page-scroll"
                            href="/#feature-anchor">Servizi</a
                        >
                    </li>
                    <li class="nav-item">
                        <a
                            class="nav-link page-scroll"
                            href="/#about-anchor">Su di Noi</a
                        >
                    </li>
                    <li class="nav-item">
                        <a
                            class="nav-link page-scroll"
                            href="/#team-anchor">Team</a
                        >
                    </li>
                    <li class="nav-item">
                        <a
                            class="nav-link page-scroll"
                            href="/#vision-anchor">La nostra visione</a
                        >
                    </li>
                    <li class="nav-item" data-redirect>
                        <a class="nav-link" href="/contact/#home-anchor"
                            >Contattaci</a
                        >
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</section>

<script type="text/javascript" >
    document.addEventListener("DOMContentLoaded", () =>{
        SetActivePageNavbarLi();

        $(".navbar-toggler").on("click", () => {
            $(".navigation").toggleClass("expanded");
        });

        // close the navbar on click of a link
        $('.navbar-nav li a').on('click', () => {
            $('.navbar-collapse').collapse('hide');
        });
    });

    function SetActivePageNavbarLi()
    {
        const page = window.location.pathname.substring(window.location.pathname.indexOf("/")) || "index";

        const nav = $(".navigation");

        const links = [...nav.find(`a[href^="${page}"]`)];

        links.forEach(link => {
            const href = link.getAttribute("href").replace(page, "");
            link.setAttribute("href", href);
        })
    }
</script>

<style lang="scss">
    @import "../styles/variables.scss";
    .nabar-light .navbar-nav .nav-link {
        color: $text-color-dark;
    }

    .navigation {
        transition: .3s ease;

        @include desktop {
            background-color: ghostwhite;

            & .navbar {
                height: 100%;
            }
        }
    }

    .navbar {
        transition: .3s ease;
        &-collapse{
            @include desktop {
                padding-bottom: 20px;
            }
        }
    }

    .navbar-headers {
        margin-block: auto;
        width: 100%;
        margin-bottom: auto;
        display: flex;
    }

    .navbar-collapse {
        justify-content: flex-end;
        margin-right: 5%;
    }

    .navbar-toggler {
        border: 0;
        outline: 0;
        margin-left: auto;
    }

    .navbar-toggler:focus {
        box-shadow: none;
    }

    .rounded-20{
        border-radius: 20px;
    }

    .nav-bg {
        background-color: ghostwhite;
        .navbar {
            padding: 10px 0;
        }
    }

    .nav-item {
        position: relative;
        text-align: center;
        padding: 20px 10px;

        @include desktop {
            font-size: 1.35rem;
            letter-spacing: 0.25ch;
            
            & + & {
                margin-block-start: 10px;
            }

            :not(.nav-link[href="#home-anchor"]) {
                opacity: 0.85;
            }

            :is(:hover, :focus).nav-link {
                opacity: 1
            }
        }
    }

    .nav-link {
        position: relative;
        height: max-content;
        width: max-content;
        padding-block: 0;
    }

    .navbar-nav {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .nav-link[href="#home-anchor"]::after{
        transform: scaleX(1);
    }

    .nav-link::after {
        content: "";
        position: absolute;

        top: 99%;
        left: 0;
        width: 100%;

        background-color: $text-color-dark;
        height: 2px;
        transform: scaleX(0);
        transform-origin: center;
        transition: 350ms;
    }

    .nav-link:not(.nav-link[href="#"]):is(:hover, :focus)::after {
        transform: scaleX(1);
    }



    .nav-item[data-redirect]::before {
        content: '';
        position: absolute;
        background-color: $text-color-dark;
        top: 15%;
        bottom: 15%;
        width: 1px;
        left: -5%;

        @include desktop {
            display: none;
        }
    }
</style>