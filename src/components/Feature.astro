</section>

<style lang="scss">
    @import "../styles/variables.scss";

    .feature {
        position: relative;

        &-item {
            h4 {
            line-height: 1;
            }

            p {
            line-height: 25px;
            }

            &:hover {
            .feature-icon {
                box-shadow: 0px 18px 43px 0px rgba(0, 141, 236, 0.21);
            }
            }
        }

        &-bg-1 {
            position: absolute;
            left: 0;
            top: 50%;
            z-index: -1;
            @include tablet {
            display: none;
            }
        }

        &-bg-2 {
            position: absolute;
            right: 0;
            bottom: 10%;
            z-index: -1;
            @include tablet {
            display: none;
            }
        }

        &-icon {
            display: inline-block;
            height: 90px;
            width: 90px;
            border-radius: 5px;
            color: $white;
            font-size: 45px;
            line-height: 90px;
            background: $primary-color;
            box-shadow: 0px 18px 25px 0px rgba(0, 141, 236, 0.10);
            text-align: center;
            transition: .2s ease;
        }
    }

    .service-bg-image {
        background-size: containe;
        background-repeat: no-repeat;
        background-position: center 400px;
    }

    .service{
        &-bg-1{
            position: absolute;
            left: 50px;
            top: 10%;
            z-index: -1;
            @include tablet {
                display: none;
            }
        }
        &-bg-2{
            position: absolute;
            right: 50px;
            top: 10%;
            z-index: -1;
            @include tablet {
                display: none;
            }
        }
        &-bg-3{
            position: absolute;
            right: 50px;
            top: 50%;
            z-index: -1;
            @include tablet {
                display: none;
            }
        }
        &-bg-4{
            position: absolute;
            left: 50px;
            bottom: 30%;
            z-index: -1;
            @include tablet {
                display: none;
        }
        }
        &-bg-5{
            position: absolute;
            left: 10%;
            bottom: 5%;
            z-index: -1;
            @include tablet {
                display: none;
            }
        }
    }

    .feature-item:is(:hover, :focus) .feature-icon {
        transition: 350ms;
        transform: scale(1.125);
    }

    .feature-item h4 {
        position: relative;
        width: max-content;
    }

    .feature-item h4::after {
        content: "";
        position: absolute;

        top: 117%;
        left: 0;
        width: 100%;

        background-color: #000;
        height: 2px;
        transform: scaleX(0);
        transform-origin: left;
        transition: 350ms;
    }

    .feature-item:is(:hover, :focus) h4::after {
        transform: scaleX(1);
    }
</style>